{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <main class="flex-1 container-register-form grid grid-cols-12">
        <section class="left-aside grid-cols-1">
        </section>

        <section class="col-start-2 col-end-13 flex flex-col items-center justify-center py-8">
            <h1 class="text-stroke custom-h1 md:mb-6">Réinitialisation du mot de passe</h1>

            {{ form_errors(passForm) }}

            {{ form_start(passForm) }}
            <div>
                {{ form_row(passForm.password) }}
                {{ form_row(passForm.Envoyer) }}
            </div>
            {{ form_end(passForm) }}
        </section>
    </main>
{% endblock %}
